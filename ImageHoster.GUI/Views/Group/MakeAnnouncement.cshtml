@model ImageHoster.GUI.Models.Group.MakeAnnouncementViewModel

@{
    ViewBag.Title = "MakeAnnouncement";
}

<h2>Make Announcement</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.Hidden("GroupId", ((Guid)ViewBag.Id).ToString())

    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field input-control text size4">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Announcement)
    </div>
    <div class="editor-field input-control textarea size6">
        @Html.TextAreaFor(model => model.Announcement)
        @Html.ValidationMessageFor(model => model.Announcement)
    </div>
    
    <p>
        <button type="submit" class="button">Announce</button>
    </p>
}